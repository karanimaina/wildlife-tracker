            <input type="text" id="badge" name="badge" class="form-control" placeholder="input Badge Number909_886" required>
            <label for="floatingInput">Badge Number</label>
            </div>
            <div class="form-floating mt-3">
                <input type="text" id="phone" name="phone" class="form-control" placeholder="input phone number (0797979797)" required>
                <label for="floatingInput">Super Power</label>
            </div>

        <button type="submit" class="btn btn-success btn-lg">Add Ranger</button>
    </form>
    </div>

